
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>LogIn</title>
    <link rel="stylesheet" type="text/css" href="StyleCss.css">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="~/Content/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/Scripts/sweetalert2.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script>
        var host = "http://" + document.location.hostname + ":" + window.location.port;
        var app = angular.module('myApp', []);
        app.controller('dangkiCtr', function($scope,$http) {
                  
            $scope.email = "";
                   
            $scope.demo = function() {
                console.log($scope.email);
            };
            $scope.recoverpass = function(email) {
                $http.post(host + "/api/TaiKhoan/fogetPass/?email="+email).then(function (response) {
                    swal("Thông báo", "Send Mail Success", "success");
                });
            };
        });
    </script>

</head>
<body ng-app="myApp">
    <div class="container" ng-controller="dangkiCtr">
        <div class="row">
            <div class="col-md-4 col-xs-4 col-sm-4"></div>
            <div class="col-md-4 col-xs-4 col-sm-4" style="margin: 30px 0px 30px 0px; border: 2px solid grey; border-radius: 8px; box-shadow:3px 3px 3px grey ;">

                <form class="form-horizontal" ng-app="myApp" ng-controller="dangkiCtr" ng-submit="recoverpass(email)" name="myForm" novalidate>
                    <div style="font-family: Arial;font-size: 40px; text-align: center; color:blue;margin: 20px 10px 20px 10px;" text-align="center"><b>Quên mật khẩu</b></div>

                    <div class="form-group">
                        <!--<label class="control-label col-sm-2" for="pwd">Register Name<span style="color: red">(*)</span>:</label>-->
                        <div class="col-md-12 col-xs-12 col-sm-12">
                            <input type="text" ng-model="email" name="email" class="form-control" placeholder="Nhập Email" required>
                            <span style="color:red" ng-show="myForm.email.$touched && myForm.email.$invalid">
                                <span ng-show="myForm.email.$error.required">Register name is required.</span>
                            </span>
                        </div>
                    </div>

                    <div style="text-align: center; padding: 5px 15px">
                        <input type="submit" value="Gửi" style="margin: 20px 0px 30px 0px; display: inline-block; padding: 10px 20px; font-size: 24px; cursor: pointer;text-align: center;text-decoration: none; outline: none; color: #fff; background-color: #31b0d5; border: none; border-radius: 15px; box-shadow: 0 3px #999;">
                    </div>
                </form>
            </div>
            <div class="col-md-4 col-xs-4 col-sm-4"></div>
        </div>
    </div>

</body>
</html>

