<!DOCTYPE html>
<html ng-app="app_tracuu">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/app.js"></script>

</head>

<body>
    <style>
        .navtab {
            padding-right: 0px;
            padding-left: 0px;
            text-align: center;
        }

            .navtab > a {
                color: white;
                font-size: 18pt;
            }

                .navtab > a:focus {
                    background-color: orange;
                }

                .navtab > a:hover {
                    background-color: orange;
                }

        .my_drop_menu {
            font-size: 18pt;
        }
    </style>
    <div class="container" style="margin: auto;" ng-controller="main">
        <div style="position: relative; height: 330px">
            <div style="position: absolute; width: 100%; height: 60%; z-index: 11; background-image: url('../../Content/Images/maxresdefault.jpg'); background-size: cover;"></div>
            <div class="row" style="position: absolute; width: 100%; height: 60%; background: rgba(255, 0, 0, 0.14); z-index: 12; top: 35%">
                <div class="col-md-2"></div>
                <div class="col-md-6" style="height: 100%">
                    <img class="img-thumbnail" alt="Cinque Terre" src="~/Content/Images/maxresdefault.jpg" style="width: 80%; height: 100%" />
                </div>
                <div class="col-md-4">
                    <h2 style="float: left">Tìm {{ name }} Đã tìm là thấy</h2>
                    <p>Giới Thiệu Giới Thiệu Giới Thiệu Giới Thiệu Giới Thiệu Giới Thiệu Giới Thiệu</p>
                </div>


            </div>
        </div>

        <ul class="nav nav-tabs row" style="background-color: rgb(20, 2, 119)">
            <li class="dropdown col-md-2 navtab">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <span class="glyphicon glyphicon-th-list"></span>

                </a>
                <ul class="dropdown-menu my_drop_menu" style="width: 100%">
                    <li><a href="index.html">Home</a></li>
                    <li><a href="chude.html">Chủ Đề</a></li>
                    <li><a href="Nghesi.html">Nghệ Sĩ</a></li>
                    <li><a href="tintuc.html">Tin tức</a></li>
                    <li><a href="phanhoi.html">Góp Ý</a></li>
                </ul>
            </li>
            <li class="col-md-5 navtab"><a href="#"> Bài Hát</a></li>

            <li class="col-md-5 navtab"><a href="#">Playlist</a></li>


        </ul>

    </div>
    <div ng-view>

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
