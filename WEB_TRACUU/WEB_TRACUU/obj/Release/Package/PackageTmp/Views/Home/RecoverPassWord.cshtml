
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>RecoverPassWord</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/sweetalert2.min.css" rel="stylesheet"/>
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/sweetalert2.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script>
        var host = "http://" + document.location.hostname + ":" + window.location.port;
        var app = angular.module('myApp', []);
        app.controller('dangkiCtr', function($scope,$http) {
                  
            $scope.email = "";
                   
            $scope.demo = function() {
                console.log($scope.email);
            };
            $scope.recoverpass = function(email) {
                $http.post(host + "/api/TaiKhoan/fogetPass/?email="+email).then(function (response) {
                    swal("Thông báo", "Send Mail Success", "success");
                });
            };
        });
    </script>

</head>
<body ng-app="myApp">
    <div style="z-index: 19; width: 100%; background-color: rgba(34, 49, 78, 0.92);" scroll
         ng-style="((hien_nav_mini == 0) && {'width':'100%','position':'fixed','top':'0px'} || (hien_nav_mini == 1) && {'position':'relative'})">
        <div class="hidden-xs" style="width: 100%; background-color: #eb5255; height: 37px">
            <ul class="nav nav-pills" style="float: left; margin-left: 30px">
                <li><a href="http://fb.com" style="color: white; font-size: 12px;"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                <li><a href="http://google.com" style="color: white; font-size: 12px;"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
                <li><a href="http://youtube.com" style="color: white; font-size: 12px;"><i class="fa fa-youtube" aria-hidden="true"></i></a></li>
                <li><a href="#" style="color: white; font-size: 12px;"><i class="fa fa-envelope-o" aria-hidden="true"></i></a></li>
                <li><a href="#" style="color: white; font-size: 12px;"><i class="fa fa-phone" aria-hidden="true"></i></a></li>
                <li style="margin-bottom: -10px;"><a href="#" style="color: white; font-size: 12px;"><i fb-likem></i></a></li>
                @*<div style="float: left; white-space: nowrap;" fb-like></div>*@
            </ul>

        </div>
        <div style="height: 65px; position: relative;">
            <ul class="nav nav-pills hidden-md hidden-lg" style="height: 100%;text-align: center; margin-left: 6%; width: 100%">
                <li class="navtab" style="width: 100%;height: 100%">
                    <a ng-click="change_tab(1)" id="nav1" href="#/" style="height: 100%;white-space: nowrap; padding: 8px;">
                        <img style="height: 100%" src="~/Content/Images/logo4.png" />
                    </a>
                </li>
            </ul>

            <ul class="nav nav-pills hidden-xs hidden-sm" style="height: 100%;text-align: center; float: left; margin-left: 6%;">
                <li class="navtab" style="height: 100%">
                    <a ng-click="change_tab(1)" id="nav1" href="#/" style="height: 100%;white-space: nowrap; padding: 8px;">
                        <img style="height: 100%" src="~/Content/Images/logo4.png" />
                    </a>
                </li>
            </ul>

        </div>

    </div>
<div class="container" ng-controller="dangkiCtr">
    <div class="row">
        <div class="col-md-4 col-xs-4 col-sm-4"></div>
        <div class="col-md-4 col-xs-4 col-sm-4" style="margin: 30px 0px 30px 0px; border: 2px solid grey; border-radius: 8px; box-shadow: 3px 3px 3px grey;">

            <form class="form-horizontal" ng-app="myApp" ng-controller="dangkiCtr" ng-submit="recoverpass(email)" name="myForm" novalidate>
                <div style="font-family: Arial; font-size: 40px; 
text-align: center; color: blue; margin: 20px 10px 20px 10px;" text-align="center"><b>Lấy lại mật khẩu</b>
                </div>

                <div class="form-group">
                    <!--<label class="control-label col-sm-2" for="pwd">Register Name<span style="color: red">(*)</span>:</label>-->
                    <div class="col-md-12 col-xs-12 col-sm-12">
                        <input type="text" ng-model="email" name="email" class="form-control" placeholder="Nhập Email" required>
                        <span style="color: red" ng-show="myForm.email.$touched && myForm.email.$invalid">
                                <span ng-show="myForm.email.$error.required">Register name is required.</span>
                            </span>
                    </div>
                </div>

                <div style="text-align: center; padding: 5px 15px">
                    <input type="submit" value="Gửi" style="margin: 20px 0px 30px 0px; display: inline-block; padding: 10px 20px; font-size: 24px; cursor: pointer; text-align: center; text-decoration: none; outline: none; color: #fff; background-color: #31b0d5; border: none; border-radius: 15px; box-shadow: 0 3px #999;">
                </div>
            </form>
        </div>
        <div class="col-md-4 col-xs-4 col-sm-4"></div>
    </div>
</div>

</body>
</html>

